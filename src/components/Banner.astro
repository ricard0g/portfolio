---
import { Image } from "astro:assets";
import ricardoImage from "../assets/images/banner-img.webp";
import rightArrowIcon from "../assets/images/right-arrow-icon.svg";
import SlidingBar from "./SlidingBar.astro";
---

<section
  id="home"
  class="flex flex-col md:flex-row justify-start md:justify-center items-center w-11/12 min-[911px]:w-4/5 py-5 pt-20 md:py-20 m-auto scroll-mt-24"
>
  <div class="relative w-full md:w-4/5 order-2 md:order-1">
    <p
      class="font-displayLight text-gray-800 text-lg sm:text-xl md:text-lg mb-5 animate-fade-up animate-duration-700"
    >
      Hi, <span
        class="inline-block animate-wiggle animate-infinite animate-duration-1000 text-xl sm:text-2xl"
        >üëãüèª</span
      > I'm Ricardo Guzman
    </p>
    <h1
      class="inline-block font-display relative font-header font-semibold leading-none tracking-normal text-gray-800 text-4xl md:text-[40px] lg:text-7xl animate-fade-right animate-duration-700 animate-delay-300"
    >
      Shopify Developer
      <svg
        class="hidden w-10 md:w-12 md:inline animate-spin animate-infinite animate-duration-[4000ms]"
        fill="#242424"
        width="60px"
        height="60px"
        viewBox="0 0 32 32"
        version="1.1"
        xmlns="http://www.w3.org/2000/svg"
        stroke="#242424"
        stroke-width="0.00032"
      >
        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>

        <g
          id="SVGRepo_tracerCarrier"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke="#CCCCCC"
          stroke-width="0.192"></g>

        <g id="SVGRepo_iconCarrier">
          <title>star-of-life</title>
          <path
            d="M28.5 22.35l-10.999-6.35 10.999-6.351c0.231-0.131 0.385-0.375 0.385-0.655 0-0.414-0.336-0.75-0.75-0.75-0.142 0-0.275 0.040-0.388 0.108l0.003-0.002-11 6.35v-12.701c0-0.414-0.336-0.75-0.75-0.75s-0.75 0.336-0.75 0.75v0 12.7l-10.999-6.35c-0.11-0.067-0.243-0.106-0.385-0.106-0.414 0-0.75 0.336-0.75 0.75 0 0.28 0.154 0.524 0.381 0.653l0.004 0.002 10.999 6.351-10.999 6.35c-0.226 0.132-0.375 0.374-0.375 0.65 0 0.415 0.336 0.751 0.751 0.751 0 0 0 0 0.001 0h-0c0.138-0.001 0.266-0.037 0.378-0.102l-0.004 0.002 10.999-6.351v12.7c0 0.414 0.336 0.75 0.75 0.75s0.75-0.336 0.75-0.75v0-12.701l11 6.351c0.107 0.063 0.237 0.1 0.374 0.1 0.277 0 0.518-0.149 0.649-0.371l0.002-0.004c0.063-0.108 0.1-0.237 0.1-0.375 0-0.277-0.15-0.518-0.372-0.648l-0.004-0.002z"
          ></path>
        </g>
      </svg>
    </h1>
    <h2
      class="max-w-full font-light text-pretty text-base md:text-xl mt-8 leading-relaxed tracking-wide animate-fade-up animate-duration-700 animate-delay-[900ms]"
    >
      Expert Frontend Developer specializing in Shopify Theme Development,
      crafting high-converting and beautifully customized online stores.
    </h2>
    <a
      class="inline-block bg-shopify-light transition-all duration-300 shadow-button hover:shadow-buttonHover hover:-translate-y-[8px] hover:translate-x-[8px] py-2 px-6 rounded-md mt-6 md:mt-12 animate-fade animate-duration-700 animate-delay-[1200ms] group cursor-pointer"
    >
      <button class="flex relative justify-between overflow-hidden">
        <div class="relative block mr-2">
          <span
            class="inline-block transition-transform duration-300 group-hover:-translate-y-full text-lg font-textSemiBold text-gray-800"
            >Portfolio</span
          >
          <span
            class="absolute left-0 transition-transform duration-300 translate-y-full group-hover:translate-y-0 text-lg font-textSemiBold text-gray-800"
            >Portfolio</span
          >
        </div>
        <div class="relative block overflow-hidden">
          <Image
            src={rightArrowIcon}
            alt="right arrow icon"
            class="inline-block ml-[2px] transition-transform duration-300 group-hover:translate-x-full text-lg"
          />
          <Image
            src={rightArrowIcon}
            alt="right arrow icon"
            class="absolute left-0 top-0 transition-transform duration-300 -translate-x-full group-hover:translate-x-0 text-lg"
          />
        </div>
      </button>
    </a>
  </div>
  <div class="w-3/6 sm:w-3/6 mb-8 md:w-5/12 order-1 md:order-2">
    <figure class="relative">
      <div
        class="absolute top-1/4 right-1/3 bg-shopify-light h-10 w-10 -z-10 rounded-circle shadow-smallBlob lg:shadow-blob"
      >
      </div>
      <Image
        fetchpriority="high"
        src={ricardoImage}
        alt="Ricardo Posing"
        class="max-w-full"
      />
      <div
        class="absolute -bottom-1 w-full md:w-full h-1/2 bg-gradient-to-b from-transparent to-white"
      >
      </div>
    </figure>
  </div>
</section>
<SlidingBar />
