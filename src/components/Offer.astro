<section
  id="contact"
  class="relative flex flex-col items-center justify-around w-[95%] min-[425px]:w-11/12 md:w-4/5 h-auto mx-auto mt-24 mb-16 py-14 px-2 md:px-10 bg-contact-background rounded-xl border-[1px] border-gray-100 shadow-xl opacity-0 scroll-mt-24"
>
  <div
    class="absolute inset-0 h-full w-full bg-gradient-to-br from-shopify-light to-gray-50 opacity-95 rounded-xl"
  >
  </div>
  <div class="w-full mx-auto z-10">
    <h4
      class="font-displayLight text-center text-lg md:text-xl mb-5 tracking-wide"
    >
      Got a Project? Need Help?
    </h4>
    <h3
      class="font-display text-center text-4xl md:text-6xl tracking-wide mb-5"
    >
      Let's Chat
    </h3>
    <p class="text-center text-base md:text-lg mb-10">
      Don't let your store stop you from achieving your highest business
      potential!
    </p>
  </div>
  <div class="w-full rounded-xl">
	<!-- Form for contact -->
	<form 
		action="mailto:ricardoguzman444@gmail.com" 
		method="post" 
		enctype="text/plain"
		class="w-full max-w-2xl mx-auto bg-white/80 backdrop-blur-sm rounded-xl p-8 shadow-lg border border-gray-200"
	>
		<div class="space-y-6">
			<!-- Name Field -->
			<div class="flex flex-col">
				<label for="name" class="text-gray-700 font-medium mb-2 text-sm md:text-base">
					Name *
				</label>
				<input
					type="text"
					id="name"
					name="name"
					required
					class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-shopify-dark focus:border-transparent transition-all duration-200 text-gray-700 placeholder-gray-400"
					placeholder="Your full name"
				/>
			</div>

			<!-- Email Field -->
			<div class="flex flex-col">
				<label for="email" class="text-gray-700 font-medium mb-2 text-sm md:text-base">
					Email *
				</label>
				<input
					type="email"
					id="email"
					name="email"
					required
					class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-shopify-dark focus:border-transparent transition-all duration-200 text-gray-700 placeholder-gray-400"
					placeholder="your.email@example.com"
				/>
			</div>

			<!-- Message Field -->
			<div class="flex flex-col">
				<label for="message" class="text-gray-700 font-medium mb-2 text-sm md:text-base">
					Message *
				</label>
				<textarea
					id="message"
					name="message"
					required
					rows="5"
					class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-shopify-dark focus:border-transparent transition-all duration-200 text-gray-700 placeholder-gray-400 resize-vertical"
					placeholder="Tell me about your project, goals, or any questions you have..."
				></textarea>
			</div>

			<!-- Submit Button -->
			<div class="flex justify-center pt-4">
				<button
					type="submit"
					class="bg-gray-800 text-white font-medium px-8 py-3 rounded-lg text-base md:text-lg hover:opacity-90 hover:shadow-md transition-all duration-200"
				>
					Send Message
				</button>
			</div>
		</div>
	</form>
  </div>
</section>