---
import { Image } from "astro:assets";
import laptopMockup from "../assets/images/store_setup_mockup.webp";
import codeSnippetMockup from "../assets/images/code_snippet_mockup.png";
import themeCustomizationScreenshot from "../assets/images/theme_customization_screenshot.png";
import troubleshootImage from "../assets/images/troubleshooting_img.png";
import video from "../assets/images/store_migration_animation.mp4";
import Chart from "./Chart.tsx";
import PerformanceIllustration from "./PerformanceIllustration.astro";
import "@/styles/global.css";
---

<section
  class="flex flex-col items-center h-full mt-28 scroll-mt-24"
  id="services"
>
  <p class="text-center text-lg md:text-xl font-textSemiBold text-gray-800">
    Services
  </p>
  <h2
    class="text-balance text-center text-gray-800 text-3xl md:text-4xl font-display my-5 max-w-80"
  >
    Your Success My Priority
  </h2>
  <p class="text-center text-balance text-base md:text-lg">
    Transforming your business into a revenue-generating powerhouse
  </p>
  <div
    class="flex flex-col items-center h-screen w-11/12 gap-y-2 min-[911px]:w-4/5 mt-14"
  >
    <div
      class="flex flex-col md:flex-row gap-y-2 md:gap-x-2 w-full md:h-[560px]"
    >
      <div
        id="bento-grid-card"
        class="relative invisible flex-col gap-y-10 w-full md:w-3/5 h-[600px] md:h-full p-10 bg-gradient-to-bl from-gray-50 from-50% to-shopify-light rounded-xl border-[1px] border-gray-200 overflow-hidden z-0"
      >
        <h3 class="text-left font-textSemiBold text-xl">Store Setup</h3>
        <p class="text-pretty text-lg">
          Save time and eliminate stress with professional store setup services.
          You run your business, I'll ensure your online presence works
          flawlessly.
        </p>
        <figure class="relative w-[200%] sm:w-[180%] lg:w-[130%] -ml-12">
          <Image
            src={laptopMockup}
            class="w-full mb-16"
            alt="Mockup Of a Computer withy Shopify Dashboard"
          />
          <p>Device Mockup created from</p>
          <a href="https://deviceframes.com/templates/macbook-air">
            MacBook Air mockups
          </a>
        </figure>
      </div>
      <div
        id="bento-grid-card"
        class="relative invisible flex-col gap-y-10 w-full md:w-2/5 h-[600px] md:h-full p-10 bg-gray-50 rounded-xl border-[1px] border-gray-200 overflow-hidden z-0"
      >
        <h3 class="text-left font-textSemiBold text-xl">
          Theme Customizations
        </h3>
        <p class="text-pretty text-lg">
          Transform your Shopify store into a sales machine with custom themes
          that convert. Beautiful design meets proven results.
        </p>
        <div class="relative">
          <figure
            class="absolute top-0 w-[180%] md:w-[160%] lg:w-[140%] xl:w-[120%] -left-12 md:-left-10 lg:-left-10 lg:-mt-4"
          >
            <Image
              src={codeSnippetMockup}
              class="w-full"
              alt="Code Snippet mockup"
            />
          </figure>
          <figure class="absolute top-12 left-1/3 md:left-1/2 w-4/5 md:w-2/3">
            <Image
              src={themeCustomizationScreenshot}
              class="w-full"
              alt="Theme Customizer"
            />
          </figure>
        </div>
      </div>
    </div>
    <div
      class="flex flex-col md:flex-row gap-y-2 md:gap-x-2 w-full md:h-[560px]"
    >
      <div
        id="bento-grid-card"
        class="relative invisible flex-col gap-y-10 w-full md:w-1/2 h-[600px] md:h-full p-10 bg-gray-50 rounded-xl border-[1px] border-gray-200 overflow-hidden z-0"
      >
        <h3 class="text-left font-textSemiBold text-xl">
          Conversion Rate Optimization
        </h3>
        <p class="text-pretty text-lg">
          Boost your conversion rates with proven CRO tactics. Strategic A/B
          testing that delivers measurable results.
        </p>
        <div
          class="relative h-80 w-[120%] sm:w-full lg:w-full sm:left-0 lg:left-0 -left-[15%]"
        >
          <Chart client:load />
        </div>
      </div>
      <div
        id="bento-grid-card"
        class="relative invisible flex-col gap-y-10 w-full md:w-1/2 h-[600px] md:h-full p-10 bg-gradient-to-tl from-gray-50 to-gray-200 rounded-xl border-[1px] border-gray-200 overflow-hidden z-0"
      >
        <h3 class="text-left font-textSemiBold text-xl">Store Migration</h3>
        <p class="text-pretty text-lg">
          Seamlessly migrate your e-commerce store without losing SEO rankings
          or data. From WooCommerce to Adobe Commerce (formerly Magento), I
          handle it all.
        </p>
        <div
          class="relative w-[160%] min-[320px]:w-[155%] min-[375px]:w-[150%] min-[425px]:w-[140%] min-[500px]:w-[135%] sm:w-[120%] md:w-[130%] lg:w-[110%] min-[1730px]:w-10/12 min-[2200px]:w-9/12 -left-14 min-[425px]:-left-14 min-[500px]:-left-16 sm:-left-8 md:-left-9 lg:-left-3 min-[1730px]:left-20 min-[2200px]:left-32 -mt-1 md:-mt-8 min-[2200px]:-mt-8"
        >
          <video autoplay muted playsinline loop class="w-full">
            <source src={video} type="video/mp4" />
          </video>
        </div>
      </div>
    </div>
    <div
      class="flex flex-col md:flex-row gap-y-2 md:gap-x-2 w-full md:h-[560px]"
    >
      <div
        id="bento-grid-card"
        class="relative invisible flex-col gap-y-10 w-full md:w-3/5 h-[600px] md:h-full p-10 bg-gradient-radial rounded-xl border-[1px] border-gray-200 text-gray-800 overflow-hidden z-0"
      >
        <h3 class="text-left font-textSemiBold text-xl">
          Performance Optimization
        </h3>
        <p class="text-pretty text-lg">
          Speed sells. Get a lightning-fast store that converts, measured by
          industry-leading tools.
        </p>
        <PerformanceIllustration />
      </div>
      <div
        id="bento-grid-card"
        class="relative invisible flex-col gap-y-10 w-full md:w-2/5 h-[600px] md:h-full p-10 bg-gray-50 rounded-xl border-[1px] border-gray-200 overflow-hidden z-0"
      >
        <h3 class="text-left font-textSemiBold text-xl">Troubleshooting</h3>
        <p class="text-pretty text-lg">
          Shopify store not working as it should? I'll debug, fix, and optimize
          it for peak performance.
        </p>
        <div class="relative">
          <figure
            class="absolute top-0 w-[180%] md:w-[160%] lg:w-[140%] xl:w-[120%] -left-12 md:-left-10 lg:-left-10 lg:-mt-4"
          >
            <Image
              src={troubleshootImage}
              class="w-full h-auto"
              alt="Code Editor with Code"
            />
          </figure>
        </div>
      </div>
    </div>
    <div
      class="flex flex-col md:flex-row gap-y-2 md:gap-x-2 w-full md:h-[560px]"
    >
      <div
        id="bento-grid-card"
        class="relative invisible flex-col gap-y-10 w-full md:w-1/2 h-[600px] md:h-full p-10 bg-gray-50 rounded-xl border-[1px] border-gray-200 overflow-hidden z-0"
      >
        <h3 class="text-left font-textSemiBold text-xl">
          Implementing Translations
        </h3>
        <p class="text-pretty text-lg">
          Ready to go global? I'll help your Shopify store speak your customers'
          language.
        </p>
        <div
          id="translation-container"
          class="relative w-[130%] -left-8 -top-6 min-[350px]:w-full min-[350px]:left-0 min-[350px]:top-0 grid grid-cols-2 grid-rows-3 min-[450px]:grid-cols-3 min-[450px]:grid-rows-2 min-[450px]:top-8 md:w-[115%] md:-left-6 lg:-top-2 lg:w-full lg:left-0 lg:grid-cols-3 lg:grid-rows-2 justify-items-center gap-4 p-10"
        >
          <div
            id="translation-cell"
            class="p-8 bg-gradient-radial rounded-xl border-gray-200 border-[1px] font-textSemiBold text-gray-800 opacity-0 animate-delay-100"
          >
            EN
          </div>
          <div
            id="translation-cell"
            class="p-8 bg-gradient-radial rounded-xl border-gray-200 border-[1px] font-textSemiBold text-gray-800 opacity-0 animate-delay-500"
          >
            ES
          </div>
          <div
            id="translation-cell"
            class="p-8 bg-gradient-radial rounded-xl border-gray-200 border-[1px] font-textSemiBold text-gray-800 opacity-0 animate-delay-[900ms]"
          >
            FR
          </div>
          <div
            id="translation-cell"
            class="p-8 bg-gradient-radial rounded-xl border-gray-200 border-[1px] font-textSemiBold text-gray-800 opacity-0 animate-delay-[1300ms]"
          >
            DE
          </div>
          <div
            id="translation-cell"
            class="p-8 bg-gradient-radial rounded-xl border-gray-200 border-[1px] font-textSemiBold text-gray-800 opacity-0 animate-delay-[1700ms]"
          >
            PT
          </div>
          <div
            id="translation-cell"
            class="p-8 bg-gradient-radial rounded-xl border-gray-200 border-[1px] font-textSemiBold text-gray-800 opacity-0 animate-delay-[2100ms]"
          >
            NL
          </div>
        </div>
      </div>
      <div
        id="bento-grid-card"
        class="relative invisible flex-col gap-y-10 w-full md:w-1/2 h-[600px] md:h-full p-10 bg-gray-50 rounded-xl border-[1px] border-gray-200 overflow-hidden z-0"
      >
      </div>
    </div>
  </div>
</section>
